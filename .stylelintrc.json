{
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-html"
  ],
  "ignoreFiles": [
    "static/wabax.css",
    "static/themes/**/*.css",
    "static/vendor/**/*.css",
    "templates/indexBack.html",
    "templates/markdown_editor.html"
  ],
  "rules": {
    "selector-disallowed-list": ["^[a-z]"],
    "selector-class-pattern": "^[a-z0-9_-]+$"
  },
  "overrides": [
    {
      "files": ["**/*.html"],
      "customSyntax": "postcss-html"
    }
  ]
}
